# ============================================================================
# SOLEVA E-COMMERCE ENVIRONMENT CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your actual values
# Never commit the actual .env file to version control

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/soleva_db"

# ============================================================================
# JWT & SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-here-minimum-32-characters"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here-minimum-32-characters"

# ============================================================================
# GOOGLE OAUTH CONFIGURATION
# ============================================================================
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================================
# FACEBOOK OAUTH CONFIGURATION
# ============================================================================
FACEBOOK_APP_ID="your-facebook-app-id"
FACEBOOK_APP_SECRET="your-facebook-app-secret"

# ============================================================================
# CAPTCHA CONFIGURATION
# ============================================================================
# Google reCAPTCHA v3
RECAPTCHA_SECRET_KEY="your-recaptcha-secret-key"
RECAPTCHA_SITE_KEY="your-recaptcha-site-key"

# hCaptcha (alternative)
HCAPTCHA_SECRET_KEY="your-hcaptcha-secret-key"
HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SMTP Configuration
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="Soleva Store <noreply@solevaeg.com>"

# Email Service (SendGrid, AWS SES, etc.)
SENDGRID_API_KEY="your-sendgrid-api-key"
AWS_SES_ACCESS_KEY_ID="your-aws-access-key"
AWS_SES_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_SES_REGION="us-east-1"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL="redis://localhost:6379"

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"  # General requests per window
RATE_LIMIT_AUTH_MAX="5"        # Auth attempts per window
RATE_LIMIT_REGISTRATION_MAX="3" # Registration attempts per window

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
CORS_ORIGIN="http://localhost:5173,http://localhost:3002,https://solevaeg.com,https://www.solevaeg.com,https://admin.solevaeg.com"

# ============================================================================
# FRONTEND CONFIGURATION
# ============================================================================
FRONTEND_URL="https://solevaeg.com"
ADMIN_URL="https://admin.solevaeg.com"

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
UPLOAD_MAX_SIZE="10485760"  # 10MB in bytes
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,image/gif"

# ============================================================================
# PAYMENT CONFIGURATION
# ============================================================================
# Stripe
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"

# PayPal
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_MODE="sandbox"  # or "live"

# ============================================================================
# SHIPPING CONFIGURATION
# ============================================================================
SHIPPING_API_KEY="your-shipping-api-key"
SHIPPING_API_URL="https://api.shipping-provider.com"

# ============================================================================
# ANALYTICS CONFIGURATION
# ============================================================================
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
NODE_ENV="development"  # or "production"
PORT="3001"
DEBUG="true"

# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES (.env.local)
# ============================================================================
# Copy these to your frontend .env.local file

# VITE_API_URL="http://localhost:3001/api/v1"  # Development
# VITE_API_URL="https://api.solevaeg.com/api/v1"  # Production

# VITE_GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
# VITE_FACEBOOK_APP_ID="your-facebook-app-id"

# VITE_RECAPTCHA_SITE_KEY="your-recaptcha-site-key"
# VITE_HCAPTCHA_SITE_KEY="your-hcaptcha-site-key"

# VITE_GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
# VITE_GOOGLE_TAG_MANAGER_ID="GTM-XXXXXXX"

# VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
# VITE_PAYPAL_CLIENT_ID="your-paypal-client-id"

# ============================================================================
# SECURITY NOTES
# ============================================================================
# 1. Use strong, unique secrets for JWT_SECRET and JWT_REFRESH_SECRET
# 2. Enable HTTPS in production
# 3. Use environment-specific OAuth credentials
# 4. Regularly rotate API keys and secrets
# 5. Monitor rate limiting and failed authentication attempts
# 6. Keep all dependencies updated
# 7. Use a proper email service for production
# 8. Configure proper CORS origins for production
# 9. Use Redis for session storage in production
# 10. Enable CAPTCHA for production authentication
