# ====== Soleva E-commerce Platform - Production Environment ======
# TEMPLATE VERSION - Safe for Git
# Copy this file to .env and update with your actual credentials

# ====== Application ======
NODE_ENV=production
DOMAIN=solevaeg.com
FRONTEND_URL=https://solevaeg.com
BACKEND_URL=https://api.solevaeg.com
ADMIN_URL=https://admin.solevaeg.com

# ====== Server Ports ======
PORT=3001
FRONTEND_PORT=80
ADMIN_PORT=3002
BACKEND_PORT=3001

# ====== Database ======
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=solevaeg_prod
POSTGRES_USER=solevaeg_user
POSTGRES_PASSWORD=YOUR_DATABASE_PASSWORD_HERE
DATABASE_URL=postgresql://solevaeg_user:YOUR_DATABASE_PASSWORD_HERE@postgres:5432/solevaeg_prod

# ====== Redis ======
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=YOUR_REDIS_PASSWORD_HERE
REDIS_URL=redis://:YOUR_REDIS_PASSWORD_HERE@redis:6379

# ====== JWT ======
JWT_SECRET=YOUR_JWT_SECRET_64_CHARACTERS_HERE
JWT_REFRESH_SECRET=YOUR_JWT_REFRESH_SECRET_64_CHARACTERS_HERE
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ====== Admin ======
ADMIN_EMAIL=admin@solevaeg.com
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_HERE
ADMIN_NAME=Soleva Admin

# ====== Zoho SMTP ======
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=admin@solevaeg.com
SMTP_PASS=YOUR_SMTP_PASSWORD_HERE

EMAIL_INFO=info@solevaeg.com
EMAIL_SALES=sales@solevaeg.com
EMAIL_BUSINESS=business@solevaeg.com
EMAIL_SUPPORT=support@solevaeg.com

# ====== Local File Storage ======
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/heic,application/pdf
UPLOAD_DIR=/app/uploads

# ====== AWS S3 (Disabled) ======
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=
S3_ENDPOINT=

# ====== Google Login ======
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID_HERE
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET_HERE

# ====== Facebook Login ======
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=

# ====== OpenAI ======
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE
OPENAI_MODEL=gpt-3.5-turbo

# ====== Sentry ======
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ====== Analytics ======
GA4_MEASUREMENT_ID=G-CBE1H1L9RC
GTM_CONTAINER_ID=GTM-WWBMMH9S
FACEBOOK_PIXEL_ID=

# ====== Security ======
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://solevaeg.com,https://www.solevaeg.com,https://admin.solevaeg.com

# ====== Backup ======
BACKUP_ENCRYPTION_KEY=YOUR_BACKUP_ENCRYPTION_KEY_32_CHARACTERS_HERE
BACKUP_S3_BUCKET=solevaeg-backups-prod
BACKUP_RETENTION_DAYS=30

# ====== Alerts ======
UPTIME_WEBHOOK_URL=
SLACK_WEBHOOK_URL=

# ====== SSL ======
SSL_EMAIL=admin@solevaeg.com

# ====== Features ======
ENABLE_CHAT_WIDGET=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENT_PROOFS=true
ENABLE_ADAPTIVE_MODE=true

# ====== Payments ======
ENABLE_COD=true
ENABLE_BANK_WALLET=true
ENABLE_DIGITAL_WALLET=true
FREE_SHIPPING_THRESHOLD=500

# ====== Cache ======
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# ====== Logs ======
LOG_LEVEL=info
LOG_MAX_FILES=10
LOG_MAX_SIZE=10m

# ====== Frontend ======
VITE_API_URL=https://api.solevaeg.com/api/v1
