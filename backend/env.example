# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/solevaeg_db?schema=public"
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=solevaeg_db
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-minimum-32-characters
JWT_REFRESH_EXPIRES_IN=30d

# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1
CORS_ORIGIN=http://localhost:5173

# Email Configuration (Branded Emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=info@solevaeg.com
SMTP_PASS=your-smtp-password

# Email Addresses
EMAIL_INFO=info@solevaeg.com
EMAIL_SALES=sales@solevaeg.com
EMAIL_BUSINESS=business@solevaeg.com
EMAIL_SUPPORT=support@solevaeg.com
EMAIL_ADMIN=admin@solevaeg.com

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/heic

# AWS S3 Configuration (for production file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=solevaeg-uploads

# Payment Configuration
PAYMENT_WEBHOOK_SECRET=your-payment-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long

# Admin Configuration
ADMIN_EMAIL=admin@solevaeg.com
ADMIN_PASSWORD=?3aeeSjqq

# Egyptian Shipping Configuration
SHIPPING_FREE_THRESHOLD=500
DEFAULT_SHIPPING_COST=60

# Chat System Configuration
OPENAI_API_KEY=your-openai-api-key
CHAT_SYSTEM_ENABLED=true

# Social Login Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id

# Development Only
SEED_DATABASE=true
DEBUG_MODE=true
ENABLE_SWAGGER=true

# Production Domain
DOMAIN=solevaeg.com
ADMIN_DOMAIN=admin.solevaeg.com
API_DOMAIN=api.solevaeg.com

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/solevaeg.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/solevaeg.com/privkey.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=solevaeg-backups
